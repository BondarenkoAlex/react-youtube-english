{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "ES2015", "DOM.Generated"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./typings"]
  },
  "exclude": ["dist", "build", "node_modules", "**/*.d.ts"]
}
